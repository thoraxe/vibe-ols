# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for the /query endpoint)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Override the default OpenAI model
# OPENAI_MODEL=openai:gpt-4o-mini

# Optional: Set your OpenAI organization ID
# OPENAI_ORG=your-org-id

# Optional: Enable debug mode for verbose logging
# DEBUG_MODE=true

# Optional: Enable verbose mode for all debug logs (including third-party libraries)
# VERBOSE_MODE=true

# Optional: Set environment name for logging
# ENVIRONMENT=development

# Database Configuration
# SQLite database URL for investigation reports storage
# DATABASE_URL=sqlite:///./investigation_reports.db

# Optional: Enable database query logging
# DATABASE_ECHO=false

# MCP (Model Context Protocol) Server Configuration
# Format: server_name=base_endpoint_url (comma-separated for multiple servers)
# MCP_SERVERS=openshift_docs=http://localhost:3001,kb_search=http://localhost:3002
MCP_SERVERS=

# Optional: MCP connection timeout in seconds
# MCP_TIMEOUT=30

# Optional: Enable MCP for OpenShift agent
# MCP_ENABLED=true 